<Window x:Class="Batoot_Movies.Views.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Batoot_Movies.Views"
        mc:Ignorable="d"
        Title="Batoot! Movie" Height="600" Width="400" Background="#242424">
    <Border Background="Transparent" BorderThickness="3" BorderBrush="#585959" Margin="8" CornerRadius="30">
        <Grid ShowGridLines="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.25*"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" ShowGridLines="True">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5.5*"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Border BorderBrush="#585959" CornerRadius="10" BorderThickness="2" Margin="22 25">
                    <TextBox TextAlignment="Center" Background="Transparent" BorderThickness="0"/>
                </Border>
                <Label Grid.Column="1" Margin="10 35 10 0">
                    <Image Source="/Icons/search.png"/>
                </Label>
            </Grid>
        </Grid>
    </Border>
</Window>
